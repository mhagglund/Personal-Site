{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2023
  },
  "extends": "eslint:recommended",
  "plugins": [
    "import"
  ],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": [
      "error",
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1,
        "FunctionDeclaration": {
          "parameters": "first"
        },
        "CallExpression": {
          "arguments": "first"
        },
        "ObjectExpression": "first"
      }
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "warn",
      "always"
    ],
    "space-before-blocks": [
      "warn",
      "always"
    ],
    "spaced-comment": [
      "warn",
      "always",
      {
        "exceptions": [
          "/"
        ]
      }
    ],
    "func-style": [
      "warn",
      "expression"
    ]
  }
}